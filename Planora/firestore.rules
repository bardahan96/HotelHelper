rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is a member of the workspace
    function isMember(workspaceId) {
      return isSignedIn() && 
             request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.members;
    }
    
    // Helper function to check if user is the owner of the workspace
    function isOwner(workspaceId) {
      return isSignedIn() && 
             request.auth.uid == get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.ownerId;
    }
    
    // Workspace rules
    match /workspaces/{workspaceId} {
      // Anyone authenticated can create a workspace
      allow create: if isSignedIn() && 
                      request.auth.uid == request.resource.data.ownerId &&
                      request.auth.uid in request.resource.data.members;
      
      // Members can read the workspace
      allow read: if isMember(workspaceId);
      
      // Only owner can update workspace details
      allow update: if isOwner(workspaceId);
      
      // Only owner can delete workspace
      allow delete: if isOwner(workspaceId);
      
      // Vacation subcollection rules
      match /vacations/{vacationId} {
        // Members can read all vacations in their workspace
        allow read: if isMember(workspaceId);
        
        // Members can create vacations
        allow create: if isMember(workspaceId) && 
                        request.auth.uid == request.resource.data.createdBy;
        
        // Members can update any vacation in the workspace
        allow update: if isMember(workspaceId);
        
        // Members can delete any vacation in the workspace
        allow delete: if isMember(workspaceId);
      }
    }
  }
}

